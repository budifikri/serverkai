---
import Header from '../components/Header.astro';
import Sidebar from '../components/Sidebar.astro';
import Footer from '../components/Footer.astro';
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
      
</head>
        <title>Trae</title>
    </head>
    <body>
        <div class="layout-container">
            <Header />
            <Sidebar />
            <main class="main-content">
                <slot />
            </main>
            <Footer />
        </div>
    </body>
</html>

<style>
    html, body {
        margin: 0;
        width: 100%;
        height: 100%;
    }

    .layout-container {
        display: grid;
        grid-template-areas:
            "header header"
            "sidebar main"
            "footer footer";
        grid-template-columns: 250px 1fr;
        grid-template-rows: 60px 1fr 60px;
        min-height: 100vh;
    }

    .main-content {
        grid-area: main;
        padding: 1rem;
        overflow: auto;
    }

    .map-container {
        width: 100%;
        height: 100%;
        background: #eee;
    }

    #map {
        width: 100%;
        height: 100%;
    }
</style>
